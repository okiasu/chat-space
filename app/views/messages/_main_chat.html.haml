.chat-main
  .chat-main__group-info
    .chat-main__group-info__edit
      = link_to edit_group_path(@group.id),class:"chat-main__group-info__edit__button" do
        Edit 
    .chat-main__group-info__group-name
      = @group.name
    .chat-main__group-info__member-name
      Member：
      - @group.users.each do |user|
        = user.name
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__box
        = f.text_field :content, class: 'chat-main__message-form__box__text', placeholder: 'type a message'
        = f.label :image, class: 'chat-main__message-form__box__image' do
          = icon('far', 'image', class: 'chat-main__message-form__box__image__gazo')
          = f.file_field :image, class: 'chat-main__message-form__box__image__file'
      = f.submit 'Send', class: 'chat-main__message-form__send__button'

